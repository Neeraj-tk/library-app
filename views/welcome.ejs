<%-include("partials/header")-%>

<title>Welcome!</title>
<body>

    <img class="bgWelcomeImage" src="/book.jpg" width="100%" height="100%">

    <div class="sign-container container">

        <div class="d-flex justify-content-center h-100">
            <div class="card sign-card">
                <div class="card-header sign-card-header">
                    <h3> Sign In </h3>
                </div>
                <div class="card-body">
                    <form action="/" method="post">
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="fa-icons input-group-text"><i class="fas fa-user"></i></span>
                            </div>
                            <input name="username" type="text" class="form-control" placeholder="username">
                            
                        </div>
                        <div class="input-group form-group">
                            <div class="input-group-prepend">
                                <span class="fa-icons input-group-text"><i class="fas fa-key"></i></span>
                            </div>
                            <input name="password" type="password" class="form-control" placeholder="password">
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Login" class="btn float-right buttons login_btn">
                        </div>
                    </form>
                </div>

                <div class="card-footer">
                    <div class="d-flex justify-content-center link-text">
                        Don't have an account? <a href="/signup" class="links"> Sign Up</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%-include("partials/footer")-%>